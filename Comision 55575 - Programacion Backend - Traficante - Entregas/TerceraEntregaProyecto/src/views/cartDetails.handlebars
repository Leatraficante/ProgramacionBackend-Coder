<!DOCTYPE html>
<html>

<head>
    <title>Carrito de Compras</title>
</head>

<body>
    <h1>Carrito de Compras</h1>
    <table>
        <thead>
            <tr>
                <th>Producto</th>
                <th>Cantidad</th>
            </tr>
        </thead>
        <tbody>
            {{#each cart.products}}
            <tr>
                <td>{{this._id}}</td>
                <td>{{this.quantity}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <a href="/api/products"><button>Volver a Productos</button></a>
    <a href="/api/carts"><button>Volver a Carrito</button></a>
    <a href="/api/carts/{{this._id}}/purchase"><button>Comprar</button></a>

</body>

</html>